<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="pas.plugins.authomatic"
    purge="False">

    <configlet
        title="PAS Authomatic Plugin Settings"
        action_id="authomatic"
        appId="pas.plugins.authomatic"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@authomatic-controlpanel"
        icon_expr="string:$portal_url/group.png"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

</object>
