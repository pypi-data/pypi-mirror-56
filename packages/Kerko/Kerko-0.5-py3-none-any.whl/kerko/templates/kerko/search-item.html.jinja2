{% extends config.KERKO_TEMPLATE_ITEM %}

{%- block metas %}
    {{- super() }}
    {%- include "kerko/_search-metas.html.jinja2" %}
{%- endblock metas %}

{%- block content_header %}
    <div class="h3 my-2 row">
        <h1 class="h3 col-auto mr-auto pr-1 d-inline d-print-none">
            {%- if is_searching %}
                {{- _("Your search") }}
            {%- else %}
                {{- _("Full bibliography") }}
            {%- endif -%}
        </h1>
        {%- if back_url %}
            <div class="col-auto ml-auto mb-2 pl-1 text-right d-print-none">
                <a class="btn btn-primary" href="{{ back_url }}">
                    <span class="fas fa-arrow-left" aria-hidden="true"></span> {{ _("Return to list of results") }}
                </a>
            </div>
        {%- endif %}
    </div>
{%- endblock content_header %}

{%- block content_inner %}
    {%- block search_criteria %}
        {%- if is_searching %}
            <div class="card breadbox mb-4 d-print-none">
                <div class="card-body">
                    {%- include "kerko/_breadbox.html.jinja2" %}
                </div>
            </div>
        {%- endif %}
    {%- endblock search_criteria %}
    {%- block search_results %}
        {%- include "kerko/_pager.html.jinja2" %}
        <h2 class="mb-3 clearfix">
            {{- content_with_badges(title, item, mode='item') -}}
        </h2>
    {%- endblock search_results %}
    {{- super() }}
    {%- include "kerko/_pager.html.jinja2" %}
{%- endblock content_inner %}
