#
# Configuration of the matplotlib style. For more information
# please visit:
# https://github.com/matplotlib/matplotlib/blob/master/matplotlibrc.template
#

# Axes
axes.formatter.limits : -5, +5
axes.labelpad         : 10.0
axes.linewidth        : 1.5
axes.spines.right     : False
axes.spines.top       : False

# Error bar
errorbar.capsize : 3

# Figure
figure.figsize : 10, 8

# Font
font.family : serif
font.size   : 30

# Legend
legend.fontsize : 20
legend.frameon  : True

# Lines
lines.linewidth  : 2
lines.marker     : o
lines.markersize : 8

# Patches
patch.linewidth : 2

# Scatter
scatter.marker : o

# Text
text.latex.preamble : \usepackage{amsmath}
text.latex.preview  : True
text.usetex         : True

# Ticks
xtick.major.width : 1.5
ytick.major.width : 1.5
xtick.minor.width : 1.0
ytick.minor.width : 1.0
xtick.major.size  : 10
ytick.major.size  : 10
xtick.minor.size  : 5
ytick.minor.size  : 5
