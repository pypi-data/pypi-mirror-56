<tool id="Add" name="Add two numbers" version="1.0">
  <description>Add two numbers together.</description>
  <authors>
    <author name="Marcel Koek" email="m.koek@erasmusmc.nl" url="http://www.bigr.nl/people/MarcelKoek" />
  </authors>
  <command version="0.1" url="">
    <targets>
      <target os="*" arch="*" interpreter="python" paths="./bin" bin="add.py" />
    </targets>
    <description>
        add.py value1 value2
        output = value1 + value2
    </description>
    <authors>
      <author name="Marcel Koek" email="m.koek@erasmusmc.nl" url="http://www.bigr.nl/people/MarcelKoek" />
    </authors>
  </command>
  <repository />
  <interface>
    <inputs>
      <input id="left_hand" name="left hand" datatype="Number" prefix="--in1" cardinality="1-*" repeat_prefix="false" required="true" />
      <input id="right_hand" name="right hand" datatype="Number" prefix="--in2" cardinality="as:left_hand" repeat_prefix="false" required="true" />
    </inputs>
    <outputs>
      <output id="result" name="result value" datatype="Number" automatic="True" cardinality="as:left_hand" method="json" location="^RESULT=(.+)$">
          <description>The summation of left_hand and right_hand.</description>
      </output>
      <output id="result_int" name="result value" datatype="Int" automatic="True" cardinality="as:left_hand" method="json" location="^RESULT=(.+)$">
        <description>The summation of left_hand and right_hand.</description>
      </output>
    </outputs>
  </interface>
  <requirements />
  <tests />
  <help>
    RTFM! =]
  </help>
  <cite>
  </cite>
  <references />
</tool>
